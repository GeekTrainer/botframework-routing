{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2015",
    "module": "commonjs",
    "outDir": "./lib",
    "rootDir": "./src",
    "noImplicitAny": true,
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "compileOnSave": true,
  "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/original M3/**/*"
    ]
}