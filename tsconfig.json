{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2015",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "noImplicitAny": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "strict": true,
  },
  "compileOnSave": true,
  "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/original M3/**/*"
    ]
}